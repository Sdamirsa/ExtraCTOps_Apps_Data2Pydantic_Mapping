# Data2Pydantic Mapping Tool Environment Variables
# Copy this file to .env and fill in your actual values
# These can also be set as system environment variables

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Local LLM Configuration (e.g., Ollama)
LOCAL_LLM_BASE_URL=http://localhost:11434/v1
LOCAL_LLM_API_KEY=ollama
LOCAL_LLM_MODEL=llama3.1:latest

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_CLIENT_SHOW_ERROR_DETAILS=false

# App Configuration
APP_MAX_PREVIEW_ROWS=100
APP_MAX_UNIQUE_VALUES_DISPLAY=20
APP_DEFAULT_EVALUATION_METHOD=smart_exact_match
APP_DEFAULT_MULTIVALUE_METHOD=haveBoth
APP_MAX_FILE_SIZE_MB=200

# Data Paths
DATA_INPUT_PATH=./data/input
DATA_OUTPUT_PATH=./data/output
TEMPLATE_PATH=./templates
TEMP_PATH=./temp

# Security Settings
ENABLE_AUTH=false
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Privacy Settings
SEND_USAGE_STATS=false
ANONYMIZE_DATA_IN_LOGS=true
MAX_COLUMNS_FOR_LLM=50

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
MAX_WORKERS=4

# Feature Flags
ENABLE_SMART_MAPPING=true
ENABLE_DATA_PREVIEW=true
ENABLE_EXCEL_EXPORT=true
ENABLE_JSON_EXPORT=true

# External Services (optional)
SENTRY_DSN=
ANALYTICS_TRACKING_ID=

# Development Settings
DEBUG_MODE=false
HOT_RELOAD=false
SHOW_DEPRECATION_WARNINGS=false
