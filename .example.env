# Data2Pydantic Mapping Tool Environment Variables
# Copy this file to .env and fill in your actual values
# Note: These are optional - you can also configure LLM settings through the UI

# =============================================================================
# REQUIRED (if using Smart Mapping feature)
# =============================================================================

# OpenAI Configuration (for Smart Mapping)
OPENAI_API_KEY=sk-your_api

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Local LLM Configuration (e.g., Ollama - alternative to cloud LLMs)
LOCAL_LLM_BASE_URL=http://localhost:11434/v1
LOCAL_LLM_API_KEY=ollama

# =============================================================================
# OPTIONAL DEFAULTS (can be changed if needed)
# =============================================================================

# LLM Model Defaults
OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
LOCAL_LLM_MODEL=llama3.1:latest

# Streamlit Server (optional - can also use command line flags)
STREAMLIT_SERVER_PORT=8501